{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dialectica.ai/schemas/ideas_v1.json",
  "title": "ideas_v1",
  "type": "object",
  "properties": {
    "ideas": {
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer", "minimum": 1, "maximum": 10 },
          "title": { "type": "string", "minLength": 3 },
          "summary": { "type": "string", "minLength": 5 },
          "layperson": { "type": "string", "minLength": 10 },
          "falsification": { "type": "string", "minLength": 10 },
          "ibm_cost_plan": { "type": "string", "minLength": 3 },
          "novelty": { "type": "string", "minLength": 3 }
        },
        "required": [
          "index",
          "title",
          "summary",
          "layperson",
          "falsification",
          "ibm_cost_plan",
          "novelty"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["ideas"],
  "additionalProperties": false
}
